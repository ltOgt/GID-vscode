{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "GID",
	"patterns": [
		{
			"include": "#base"
		},
		{
			"include": "#notice"
		},
		{
			"include": "#reference"
		},
		{
			"include": "#line"
		},
		{
			"include": "#comment"
		},
		{
			"include": "#comment-block"
		},
		{
			"include": "#bold-style"
		},
		{
			"include": "#underline-style"
		},
		{
			"include": "#italic-style"
		}
	],
	"repository": {
		"base": {
			"patterns": [
				{
					"name": "base.gidsym",
					"match": "(?<=^|[\\s|\\|])(>|\\.|\\(|\\)|<|\\^|°|\\?|:|:=|\\^=|~|/|§|¬|!=|i|0|=|x|->|=>|<-|[0-9]+\\)|--|\\+|-|//|\\$|>>|::|\\|-|E|e|00|\\*|#|\\{|\\}|d|v|@|_|\\[ \\]|\\[x\\]|\\[\\*\\]|\\[\\?\\]|\\[p\\]|\\[~\\])(?=$|[\\s|\\|])"
				}
			]
		},
		"notice": {
			"patterns": [
				{
					"name": "notice.gidsym",
					"match": "(?<=^|[\\s|\\|])(!|S|\\[!\\])(?=$|[\\s|\\|])"
				}
			]
		},
		"reference": {
			"patterns": [
				{
					"name": "reference.gidsym",
					"match": "(~\\[[a-zA-Z_\\s]+\\]|\\*\\[[a-zA-Z_\\s]+\\]|~\\{[a-zA-Z_\\s]+\\}|\\*\\{[a-zA-Z_\\s]+\\}|\\[a-zA-Z0-9\\]~)"
				}
			]
		},
		"line": {
			"name": "line.gidsym",
			"begin": "(!!)(?=\\s)",
			"end": "$",
			"patterns": [
				{
					"name": "constant.character.escape.gidsym",
					"match": "\\\\."
				}
			]
		},
		"comment": {
			"name": "comment.gidsym",
			"begin": "(\\*\\*)(?=\\s)",
			"end": "$",
			"patterns": [
				{
					"name": "constant.character.escape.gidsym",
					"match": "\\\\."
				}
			]
		},
		"comment-block": {
			"name": "comment-block.gidsym",
			"begin": "\\*\\*<(?=$|\\s)",
			"end": "\\*\\*>(?=$|\\s)",
			"patterns": [
				{
					"name": "content.comment-block.gidsym",
					"match": "\\\\."
				}
			]
		},
		"bold-style": {
			"name": "bold.style.gidsym",
			"begin": "(?<=^|[\\s])(:)(?=[^\\s|\\n|$])",
			"end": "(?<=[^\\s|\\n])(:)(?=$|[\\s|\\n])",
			"patterns": [
				{
					"name": "content.underline.style.gidsym",
					"match": "\\\\."
				}
			]
		},
		"underline-style": {
			"name": "underline.style.gidsym",
			"begin": "(?<=^|[\\s])(_)(?=[^\\s|\\n|$])",
			"end": "(?<=[^\\s|\\n])(_)(?=$|[\\s|\\n])",
			"patterns": [
				{
					"name": "content.underline.style.gidsym",
					"match": "\\\\."
				}
			]
		},
		"italic-style": {
			"name": "italic.style.gidsym",
			"begin": "(?<=^|[\\s])(´)(?=[^\\s|\\n|$])",
			"end": "(?<=[^\\s|\\n])(´)(?=$|[\\s|\\n])",
			"patterns": [
				{
					"name": "content.italic.style.gidsym",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.gid"
}