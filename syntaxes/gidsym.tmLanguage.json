{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "GID",
	"patterns": [
		{
			"include": "#base"
		},
		{
			"include": "#todo"
		},
		{
			"include": "#enclose-block"
		},
		{
			"include": "#notice"
		},
		{
			"include": "#reference"
		},
		{
			"include": "#line"
		},
		{
			"include": "#line-pre"
		},
		{
			"include": "#comment"
		},
		{
			"include": "#comment-block"
		},
		{
			"include": "#verbatim-block"
		},
		{
			"include": "#bold-style"
		},
		{
			"include": "#underline-style"
		},
		{
			"include": "#italic-style"
		}
	],
	"repository": {
		"base": {
			"patterns": [
				{
					"name": "base.gidsym",
					"match": "(?<=^|[\\s|\\|])(>|\\.|<|\\^|°|\\?|:|:=|\\^=|~|/|§|¬|!=|i|0|=|x|->|=>|<-|[0-9]+\\)|--|\\+|-|//|\\$|>>|::|\\|-|E|e|00|\\*|#|d|v|@|_)(?=[\\s|\\|])"
				}
			]
		},
		"todo": {
			"patterns": [
				{
					"name": "todo.gidsym",
					"match": "(?<=^|[\\s|\\|])(\\[ \\]|\\[x\\]|\\[\\*\\]|\\[\\?\\]|\\[p\\]|\\[~\\])(?=[\\s|\\|])"
				}
			]
		},
		"enclose-block": {
			"name": "enclose-block.gidsym",
			"begin": "(?<=^|\\t| )(\\(|\\{)(?=\\t| )",
			"beginCaptures": {
				"1": {
					"name": "start.enclose-block.gidsym"
				}
			},
			"end": "(?<=\\t| )(\\)|\\})(?=$|\\t| )",
			"endCaptures": {
				"1": {
					"name": "end.enclose-block.gidsym"
				}
			},
			"patterns": [
				{
					"name": "content.enclose-block.gidsym",
					"match": "[^\\(\\)\\{\\}\\n]+"
				}
			]
		},
		"notice": {
			"patterns": [
				{
					"name": "notice.gidsym",
					"match": "(?<=^|[\\s|\\|])(!|S|\\[!\\]|\\[-\\])(?=$|[\\s|\\|])"
				}
			]
		},
		"reference": {
			"patterns": [
				{
					"name": "reference.gidsym",
					"match": "(~\\[[a-zA-Z_\\s]+\\]|\\*\\[[a-zA-Z_\\s]+\\]|~\\{[a-zA-Z_\\s]+\\}|\\*\\{[a-zA-Z_\\s]+\\}|\\[a-zA-Z0-9\\]~)"
				}
			]
		},
		"line": {
			"name": "line.gidsym",
			"begin": "(!!)(?=\\s)",
			"end": "$",
			"patterns": [
				{
					"name": "constant.character.escape.gidsym",
					"match": "\\\\."
				}
			]
		},
		"line-pre": {
			"patterns": [
				{
					"name": "linepre.gidsym",
					"match": "(?<=^)([\\s]+)(?=(!!)|(\\[!\\]))"
				}
			]
		},
		"comment": {
			"name": "comment.gidsym",
			"begin": "(\\*\\*)(?=\\s)",
			"end": "$",
			"patterns": [
				{
					"name": "constant.character.escape.gidsym",
					"match": "\\\\."
				}
			]
		},
		"comment-block": {
			"name": "comment-block.gidsym",
			"begin": "\\*\\*<(?=$|\\s)",
			"end": "\\*\\*>(?=$|\\s)",
			"patterns": [
				{
					"name": "content.comment-block.gidsym",
					"match": "\\\\."
				}
			]
		},
		"verbatim-block": {
			"name": "verbatim-block.gidsym",
			"begin": "(?<=^|\\t| )(\\{\\{)(?=\\n)",
			"beginCaptures": {
				"1": {
					"name": "start.verbatim-block.gidsym"
				}
			},
			"end": "(?<=\\t| )(\\}\\})(?=$)",
			"endCaptures": {
				"1": {
					"name": "end.verbatim-block.gidsym"
				}
			},
			"patterns": [
				{
					"name": "catchall.verbatim-block.gidsym",
					"match": "\\\\."
				}
			]
		},
		"bold-style": {
			"patterns": [
				{
					"name": "bold.style.gidsym",
					"match": "(?<=^|[\\s])(:[^\\s|\\n|$]{0,1}[^\\n:]+[^\\s|\\n|$]{0,1}:)(?=$|[\\s|\\n])"
				}
			]
		},
		"underline-style": {
			"patterns": [
				{
					"name": "underline.style.gidsym",
					"match": "(?<=^|[\\s])(_[^\\s|\\n|$]{0,1}[^\\n_]+[^\\s|\\n|$]{0,1}_)(?=$|[\\s|\\n])"
				}
			]
		},
		"italic-style": {
			"patterns": [
				{
					"name": "italic.style.gidsym",
					"match": "(?<=^|[\\s])(´[^\\s|\\n|$]{0,1}[^\\n´]+[^\\s|\\n|$]{0,1}´)(?=$|[\\s|\\n])"
				}
			]
		}
	},
	"scopeName": "source.gid"
}